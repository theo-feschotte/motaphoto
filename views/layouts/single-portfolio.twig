{% extends 'base.twig' %}

{% block content %}
    <main class="mb-9">
        <section class="h-[90vh] site-wrapper mt-[80px] !pt-10 !pb-0 overflow-hidden" data-module-text>
            <div class="h-full grid grid-cols-12 gap-5" data-speed="clamp(0.9)">
                <div class="col-span-6 pr-36 pb-9 flex flex-col gap-5 justify-end border-b">
                    <h1 class="h2">{{ post.title }}</h1>
                    <p class="font-mono font-normal leading-[1.45em] tracking-widest uppercase">Référence : {{ post.meta('ref') }}</p>
                    <p class="font-mono font-normal leading-[1.45em] tracking-widest uppercase">Catégorie : {{ post.terms({taxonomy:'category'})|join(', ') }}</p>
                    <p class="font-mono font-normal leading-[1.45em] tracking-widest uppercase">Format : {{ post.terms({taxonomy:'format'})|join(', ') }}</p>
                    <p class="font-mono font-normal leading-[1.45em] tracking-widest uppercase">Type : {{ post.meta('type') }}</p>
                    <p class="font-mono font-normal leading-[1.45em] tracking-widest uppercase">Année : {{ post.meta('year') }}</p>
                </div>
                <div class="col-span-6 overflow-hidden">
                    <img class="object-cover w-full h-full" src="{{ post.thumbnail.src }}" alt="{{ post.thumbnail.alt }}">
                </div>
            </div>
        </section>
        
        <section class="site-wrapper !pt-2 overflow-hidden" data-module-text>
            <div class="flex gap-5 items-end pb-8 border-b">
                <div class="col-span-6 flex gap-24 items-center">
                    <p>Cette photo vous intéresse ?</p>
                    <button class="btn">Contact</button>
                </div>
                <div class="w-[80px] h-[70px] ml-auto">
                    <img class="object-cover w-full h-full" src="{{ post.thumbnail.src }}" alt="{{ post.thumbnail.alt }}">
                </div>
            </div>
        </section>
        
        <section class="site-wrapper flex flex-col gap-12 overflow-hidden" data-module-text>
            <div>
                <h2 class="h3">Vous aimerez aussi</h2>
            </div>
            <div class="flex flex-col gap-12 items-center">
                <ul class="grid grid-cols-12 gap-5">
                    <li class="relative col-span-6 aspect-square z-0">
                        <a href="#" target="_self">
                            <img class="object-cover w-full h-full" src="http://motaphoto.local/wp-content/uploads/2024/09/reception-bf2385-scaled.webp" alt="Santé !">
                        </a>
                    </li>
                    <li class="relative col-span-6 aspect-square z-0">
                        <a href="#" target="_self">
                            <img class="object-cover w-full h-full" src="http://motaphoto.local/wp-content/uploads/2024/09/reception-bf2385-scaled.webp" alt="Santé !">
                        </a>
                    </li>
                </ul>
                <a class="btn" href="#" target="_self">Toutes les photos</a>
            </div>
        </section>
    </main>
{% endblock %}
