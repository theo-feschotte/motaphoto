{% extends 'base.twig' %}

{% block content %}
    <main class="mb-9">
        <section class="h-[90vh] site-wrapper mt-[80px] !pt-10 !pb-0 overflow-hidden" data-module-text>
            <div class="h-full grid grid-cols-12 gap-5" data-speed="clamp(0.9)">
                <div class="col-span-6 pr-36 pb-9 flex flex-col gap-5 justify-end border-b">
                    <h1 class="h2">{{ post.meta('second_title') ? post.meta('second_title')|striptags('<br>') : post.title  }}</h1>
                    <p class="font-mono font-normal leading-[1.45em] tracking-widest uppercase">Référence : {{ post.meta('ref') }}</p>
                    <p class="font-mono font-normal leading-[1.45em] tracking-widest uppercase">Catégorie : {{ post.terms({taxonomy:'categorie'})|join(', ') }}</p>
                    <p class="font-mono font-normal leading-[1.45em] tracking-widest uppercase">Format : {{ post.terms({taxonomy:'format'})|join(', ') }}</p>
                    <p class="font-mono font-normal leading-[1.45em] tracking-widest uppercase">Type : {{ post.meta('type') }}</p>
                    <p class="font-mono font-normal leading-[1.45em] tracking-widest uppercase">Année : {{ post.meta('year') }}</p>
                </div>
                <div class="col-span-6 overflow-hidden">
                    <img class="object-cover w-full h-full" src="{{ post.thumbnail.src }}" alt="{{ post.thumbnail.alt }}">
                </div>
            </div>
        </section>
        
        <section class="site-wrapper !pt-2 overflow-hidden" data-module-text>
            <div class="flex gap-5 items-end pb-8 border-b">
                <div class="col-span-6 flex gap-24 items-center">
                    <p>{{ options.portfolio_interested ?: 'Cette photo vous intéresse ?' }}</p>
                    <button class="btn" data-modal="btn">Contact</button>
                </div>
                <div class="ml-auto flex flex-col gap-5" data-module-customslider>
                    <div class="w-[80px] h-[70px]">
                        <img class="group-hover:opacity-10 object-cover w-full h-full" src="{{ post.thumbnail.src }}" alt="{{ post.thumbnail.alt }}" data-customslider="image">
                    </div>
                    <div class="w-full h-full flex justify-between items-center" data-customslider="pagination">
                        <a class="group" href="{{ prev_post.link }}" target="_self" data-src="{{ prev_post.thumbnail.src }}">
                            <svg class="-scale-x-100 fill-black group-hover:-translate-x-1 duration-200" width="26" height="8" viewBox="0 0 26 8" xmlns="http://www.w3.org/2000/svg"><path d="M25.3536 3.64645C25.5488 3.84171 25.5488 4.15829 25.3536 4.35355L22.1716 7.53553C21.9763 7.7308 21.6597 7.7308 21.4645 7.53553C21.2692 7.34027 21.2692 7.02369 21.4645 6.82843L24.2929 4L21.4645 1.17157C21.2692 0.976311 21.2692 0.659728 21.4645 0.464466C21.6597 0.269204 21.9763 0.269204 22.1716 0.464466L25.3536 3.64645ZM25 4.5H0V3.5H25V4.5Z"/></svg>
                        </a>
                        <a class="group" href="{{ next_post.link }}" target="_self" data-src="{{ next_post.thumbnail.src }}">
                            <svg class="fill-black group-hover:translate-x-1 duration-200" width="26" height="8" viewBox="0 0 26 8" xmlns="http://www.w3.org/2000/svg"><path d="M25.3536 3.64645C25.5488 3.84171 25.5488 4.15829 25.3536 4.35355L22.1716 7.53553C21.9763 7.7308 21.6597 7.7308 21.4645 7.53553C21.2692 7.34027 21.2692 7.02369 21.4645 6.82843L24.2929 4L21.4645 1.17157C21.2692 0.976311 21.2692 0.659728 21.4645 0.464466C21.6597 0.269204 21.9763 0.269204 22.1716 0.464466L25.3536 3.64645ZM25 4.5H0V3.5H25V4.5Z"/></svg>
                        </a>
                    </div>
                </div>
            </div>
        </section>
        
        <section class="site-wrapper flex flex-col gap-12 overflow-hidden" data-module-text>
            <div>
                <h2 class="h3">{{ options.portfolio_also_like ?: 'Vous aimerez aussi' }}</h2>
            </div>
            <div class="flex flex-col gap-12 items-center">
                <ul class="grid grid-cols-12 gap-5">
                    {% for post in posts %}
                        <li class="relative col-span-6 aspect-square z-0">
                            <a href="{{ post.link }}" target="_self">
                                <img class="object-cover w-full h-full" src="{{ post.thumbnail.src }}" alt="{{ post.thumbnail.alt }}">
                            </a>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </section>
    </main>
{% endblock %}
