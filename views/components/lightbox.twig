<section class="hidden opacity-0 user-none pointer-events-none fixed top-0 left-0 z-10 w-screen h-screen duration-200 overflow-hidden" data-lenis-prevent data-lightbox="lightbox">
    <div class="relative z-0 site-wrapper w-full h-full grid grid-cols-12 items-center">
        <div class="absolute top-1/2 -translate-y-1/2 left-1/2 -translate-x-1/2 -z-10 w-full h-full bg-black opacity-60" data-lightbox="close"></div>
        <div class="col-span-2 col-start-1 flex justify-start">
            <button class="group flex gap-2 justify-center items-center" data-lightbox="prev">
                <svg class="-scale-x-100 fill-white group-hover:-translate-x-2 duration-200" width="27" height="16" viewBox="0 0 27 16" xmlns="http://www.w3.org/2000/svg"><path d="M26.7071 7.29289C27.0976 7.68342 27.0976 8.31658 26.7071 8.70711L20.3431 15.0711C19.9526 15.4616 19.3195 15.4616 18.9289 15.0711C18.5384 14.6805 18.5384 14.0474 18.9289 13.6569L24.5858 8L18.9289 2.34315C18.5384 1.95262 18.5384 1.31946 18.9289 0.928932C19.3195 0.538408 19.9526 0.538408 20.3431 0.928932L26.7071 7.29289ZM1 9C0.447716 9 0 8.55228 0 8C0 7.44772 0.447716 7 1 7V9ZM26 9H1V7H26V9Z"/></svg>
                <span class="text-white group-hover:-translate-x-2 duration-200">Précédente</span>
            </button>
        </div>
        <div class="swiper col-span-full sm:col-span-6 sm:col-start-4 m-0" data-lightbox="slider">
            <ul class="swiper-wrapper w-full h-full flex items-center">
                {% for post in posts %}
                    <li class="swiper-slide w-full h-full flex flex-col gap-5">
                        <a class="w-full h-full" href="{{ post.link }}" target="_self">
                            <div class="w-full h-auto aspect-square overflow-hidden">
                                <img class="object-cover w-full h-full" src="{{ post.thumbnail.src }}" alt="{{ post.thumbnail.alt }}">
                            </div>
                        </a>
                        <div class="w-full h-auto">
                            <div class="relative w-full flex items-end justify-between">
                                <p class="font-sans font-medium text-white uppercase">{{ post.ref }}</p>
                                <p class="font-mono font-normal leading-[1.45em] text-white uppercase text-right">{{ post.terms({taxonomy:'categorie'})|join(', ') }}</p>
                            </div>
                        </div>
                    </li>
                {% endfor %}
            </ul>
        </div>
        <div class="col-span-2 col-end-13 flex justify-end">
            <button class="group flex gap-2 justify-center items-center" data-lightbox="next">
                <span class="text-white group-hover:translate-x-2 duration-200">Suivante</span>
                <svg class="fill-white group-hover:translate-x-2 duration-200" width="27" height="16" viewBox="0 0 27 16" xmlns="http://www.w3.org/2000/svg"><path d="M26.7071 7.29289C27.0976 7.68342 27.0976 8.31658 26.7071 8.70711L20.3431 15.0711C19.9526 15.4616 19.3195 15.4616 18.9289 15.0711C18.5384 14.6805 18.5384 14.0474 18.9289 13.6569L24.5858 8L18.9289 2.34315C18.5384 1.95262 18.5384 1.31946 18.9289 0.928932C19.3195 0.538408 19.9526 0.538408 20.3431 0.928932L26.7071 7.29289ZM1 9C0.447716 9 0 8.55228 0 8C0 7.44772 0.447716 7 1 7V9ZM26 9H1V7H26V9Z"/></svg>
            </button>
        </div>
    </div>
</section>