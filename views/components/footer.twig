<footer class="site-wrapper !py-11 sm:!py-2 border-t border-black">
	<nav class="flex max-sm:flex-col max-sm:items-center gap-6 sm:gap-20 justify-center">
		<ul class="col-span-full flex max-sm:flex-col max-sm:items-center gap-6 sm:gap-20">
			{% for item in menu_footer.items %}
				<li>
					<a class="font-mono text-base font-normal uppercase {{ item.current ? 'active' }}" href="{{ item.link }}" target="{{ item.target ?: '_self' }}">{{ item.title }}</a>
				</li>
			{% endfor %}
		</ul>
		<p class="font-mono text-base font-normal uppercase">Tous droits réservés</p>
	</nav>
</footer>