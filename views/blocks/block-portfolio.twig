{% if portfolio %}
    <section class="site-wrapper !pt-20 !pb-10 flex flex-col justify-center overflow-hidden" data-module-text>
        <div class="flex flex-col gap-10" data-speed="clamp(0.9)">
            <div class="flex gap-9">
                {% if fields.order_by_categories %}
                    <div>
                        <select class="p-5 pr-40 py-3 border-grey-default rounded-lg text-secondary text-xs font-medium uppercase tracking-[0.03em]">
                            <option>Cat√©gories</option>
                            {% for categorie in categories %}
                                <option value="{{ categorie.slug }}">{{ categorie.title }}</option>
                            {% endfor %}
                        </select>
                    </div>
                {% endif %}
                {% if fields.order_by_formats %}
                    <div>
                        <select class="p-5 pr-40 py-3 border-grey-default rounded-lg text-secondary text-xs font-medium uppercase tracking-[0.03em]">
                            <option>Formats</option>
                            {% for format in formats %}
                                <option value="{{ format.slug }}">{{ format.title }}</option>
                            {% endfor %}
                        </select>
                    </div>
                {% endif %}
                {% if fields.order_by_date %}
                    <div class="ml-auto">
                        <select class="p-5 pr-40 py-3 border-grey-default rounded-lg text-secondary text-xs font-medium uppercase tracking-[0.03em]">
                            <option>Trier par</option>
                            <option value="desc">Desc</option>
                            <option value="asc">Asc</option>
                        </select>
                    </div>
                {% endif %}
            </div>
            <div class="flex flex-col gap-10 items-center">
                <ul class="w-full grid grid-cols-12 gap-5">
                    {% for item in portfolio %}
                        <li class="relative col-span-6 aspect-square z-0">
                            <img class="object-cover w-full h-full" src="{{ item.thumbnail.src }}" alt="{{ item.thumbnail.alt }}">
                            <div class="absolute top-0 left-0 w-full h-full flex opacity-0 hover:opacity-100">
                                <div class="absolute top-0 left-0 w-full h-full bg-black opacity-60"></div>
                                <div class="relative w-full h-full p-3 px-4 flex items-end justify-between">
                                    <p class="font-sans font-medium text-white uppercase">{{ item.title }}</p>
                                    <p class="font-mono font-normal leading-[1.45em] text-white uppercase text-right">{{ item.terms({taxonomy:'categorie'})|join(', ') }}</p>
                                    <a class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 flex items-center justify-center text-white text-center" href="{{ item.link }}" target="_self">OEIL</a>
                                    {# <p class="absolute top-3 right-4 flex items-center justify-center text-white text-center">FULL</p> #}
                                    <button class="absolute top-3 right-4 flex items-center justify-center text-white text-center">FULL</button>
                                </div>
                            </div>
                        </li>
                    {% endfor %}
                </ul>
                <button class="btn">Charger plus</button>
            </div>
        </div>
    </section>
{% endif %}
