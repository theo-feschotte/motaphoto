<section class="site-wrapper max-sm:pt-6 max-sm:px-14 sm:!pt-20 !pb-10 flex flex-col justify-center overflow-hidden" data-module-ajax data-ajax-action="portfolio" data-module-text>
    <div class="flex flex-col gap-10" data-speed="clamp(0.9)">
        <div class="flex flex-wrap gap-2 sm:gap-9">
            {% if fields.order_by_categories %}
                <div class="max-sm:w-full flex gap-2 items-center">
                    <label class="sr-only" for="categorie-select">Catégories</label>
                    <select id="categorie-select" name="categorie-select" class="w-full sm:w-64 p-5 pr-8 py-3 border-grey-default rounded-lg text-secondary text-xs font-medium uppercase tracking-[0.03em]" data-ajax="input">
                        <option value="">Catégories</option>
                        {% for categorie in categories %}
                            <option value="{{ categorie.slug }}">{{ categorie.title }}</option>
                        {% endfor %}
                    </select>
                </div>
            {% endif %}
            {% if fields.order_by_formats %}
                <div class="max-sm:w-full flex gap-2 items-center">
                    <label class="sr-only" for="format-select">Formats</label>
                    <select id="format-select" name="format-select" class="w-full sm:w-64 p-5 pr-8 py-3 border-grey-default rounded-lg text-secondary text-xs font-medium uppercase tracking-[0.03em]" data-ajax="input">
                        <option value="">Formats</option>
                        {% for format in formats %}
                            <option value="{{ format.slug }}">{{ format.title }}</option>
                        {% endfor %}
                    </select>
                </div>
            {% endif %}
            {% if fields.order_by_date %}
                <div class="max-sm:w-full sm:ml-auto flex gap-2 items-center">
                    <label class="sr-only" for="orderby-select">Trier par</label>
                    <select id="orderby-select" name="orderby-select" class="w-full sm:w-64 p-5 pr-8 py-3 border-grey-default rounded-lg text-secondary text-xs font-medium uppercase tracking-[0.03em]" data-ajax="input">
                        <option value="">Trier par</option>
                        <option value="DESC">Récent au plus ancien</option>
                        <option value="ASC">Ancien au plus récent</option>
                    </select>
                </div>
            {% endif %}
        </div>
        <div class="flex flex-col gap-10 items-center">
            {% include 'components/portfolio-results.twig' %}
            {% include 'components/pagination.twig' %}
        </div>
    </div>
</section>
