<section class="relative w-full h-96 sm:h-screen site-wrapper px-14 sm:!px-52 flex flex-col justify-center overflow-hidden z-0" data-module-text>
	<div data-speed="clamp(0.9)">
		{% if post.thumbnail %}
			<div class="absolute top-0 left-0 -z-10 w-full h-full">
				<img class="max-sm:object-cover max-sm:object-center w-full h-full" src="{{ post.thumbnail.src }}" alt="{{ post.thumbnail.alt }}">
			</div>
		{% endif %}
		<div {{ fn('is_front_page') ? 'class="text-title"' }}>
			{% if fields.title %}
				{{ fields.title }}
			{% else %}
				<h1>{{ post.title }}</h1>
			{% endif %}
		</div>
	</div>
</section>
